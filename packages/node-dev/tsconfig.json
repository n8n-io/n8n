{
	"compilerOptions": {
		"lib": [
			"es2017"
		],
		"types": [
			"node"
		],
		"module": "commonjs",
		"esModuleInterop": true,
		"removeComments": true,
		"strict": true,
		"preserveConstEnums": true,
		"declaration": true,
		"outDir": "./dist/",
		"target": "es2017",
		"sourceMap": true
	},
	"include": [
		"**/*.d.ts",
		"commands/**/*",
		"index.ts",
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules/**/*",
		"**/*.spec.ts"
	]
}
