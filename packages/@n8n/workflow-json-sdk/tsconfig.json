{
	"extends": "@n8n/typescript-config/tsconfig.frontend.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "dist",
		"types": ["vite/client", "vitest/globals", "node"],
		"isolatedModules": true,
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler",
		"downlevelIteration": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"scripts/**/*.ts",
		"playground/**/*.ts",
		"vite.config.ts",
		"tsdown.config.ts"
	]
}
