# n8n Environment Configuration
# Copy this file to .env and modify the values as needed

# The hostname where n8n will be accessible
N8N_HOST=localhost

# The protocol to use (http or https)
N8N_PROTOCOL=https

# The webhook URL for n8n
WEBHOOK_URL=https://localhost/

# Timezone for n8n (e.g., UTC, Europe/Berlin, America/New_York)
GENERIC_TIMEZONE=UTC

# Optional: Database configuration (if using external database)
# N8N_DATABASE_TYPE=postgresdb
# N8N_DATABASE_POSTGRESDB_HOST=localhost
# N8N_DATABASE_POSTGRESDB_PORT=5432
# N8N_DATABASE_POSTGRESDB_DATABASE=n8n
# N8N_DATABASE_POSTGRESDB_USER=n8n
# N8N_DATABASE_POSTGRESDB_PASSWORD=password

# Optional: Redis configuration (for queue management)
# N8N_REDIS_HOST=localhost
# N8N_REDIS_PORT=6379
# N8N_REDIS_PASSWORD=

# Optional: Security settings
# N8N_ENCRYPTION_KEY=your-encryption-key-here
# N8N_USER_MANAGEMENT_DISABLED=false
# N8N_BASIC_AUTH_ACTIVE=false
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=password
